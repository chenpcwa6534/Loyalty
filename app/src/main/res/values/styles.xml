<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="font_header_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@mipmap/bg_statusbar_red</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="font_content">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/font_content_style_login</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="font_edit">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/font_hint</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="font_skip">
        <item name="android:layout_gravity">right</item>
        <item name="android:drawableRight">@mipmap/ic_common_arrow</item>
        <item name="android:textColor">@color/font_skip</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="font_messageqty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@mipmap/ic_statusbar_pink_number</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="font_button">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/btn_onclick_welcome</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="font_name">
        <item name="android:textColor">@color/str_name</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="font_information">
        <item name="android:textColor">@color/str_infor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="line_Vertical_long">
        <item name="android:src">@mipmap/common_gary_small_line</item>
        <item name="android:layout_weight">0.01</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="line_Vertical_short">
        <item name="android:src">@mipmap/line_common_vertical</item>
        <item name="android:layout_weight">0.05</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="more_status_area">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">0.24</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="pocket_qty">
        <item name="android:textColor">@color/str_level</item>

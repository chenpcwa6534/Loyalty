<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/font_apiTest"
                android:id="@+id/txt_apiFrontPageRTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="api FrontPage RTN"/>

            <TextView
                style="@style/font_apiTest"
                android:id="@+id/txt_apiFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="api Filter"/>


            <TextView
                style="@style/font_apiTest"
                android:id="@+id/txt_apiMemberCoupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="api Member Coupon"/>


        </LinearLayout>

    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_apiStauts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_api"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="api content"/>

            <LinearLayout
                android:id="@+id/ly_apiContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bg_common_welcome"/>

   <Button
       style="@style/font_button"
       android:id="@+id/welcome_guest"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="30dp"
       android:text="@string/welcome_guest"/>

    <Button
        style="@style/font_button"
        android:id="@+id/welcome_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcome_guest"
        android:layout_marginBottom="10dp"
        android:text="@string/welcome_reg"
        android:drawableLeft="@mipmap/ic_common_phone"/>

</RelativeLayout>

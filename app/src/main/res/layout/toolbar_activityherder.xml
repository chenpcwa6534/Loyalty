<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="40dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@mipmap/bg_statusbar_white">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_statusbar_gary_back"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/img_back"
            android:layout_toLeftOf="@+id/message"
            android:layout_alignBottom="@+id/img_back"
            android:layout_alignTop="@+id/img_back"
            android:gravity="center"
            android:textColor="@color/hearder_gray"
            android:textSize="18sp"
            android:text="(Store Name)"/>

        <RelativeLayout
            android:id="@+id/message"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/ic_statusbar_white_mail"/>

            <TextView
                android:id="@+id/img_messageQTY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_tabbar_number"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>

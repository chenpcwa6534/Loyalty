<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="200dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_sreach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_search_white"
        android:hint="@string/store_item_searchedit"
        android:textColorHint="@color/gray"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/btn_common_red_category_normal">

        <TextView
            style="@style/font_searchText"
            android:id="@+id/txt_StoreType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="(StoreType)"/>

        <!--<ImageView-->
            <!--style="@style/line_Vertical_short"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->

        <TextView
            style="@style/font_searchText"
            android:id="@+id/txt_Area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="(Area)"/>

        <!--<ImageView-->
            <!--style="@style/line_Vertical_short"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->

        <TextView
            style="@style/font_searchText"
            android:id="@+id/txt_Order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="(Order)"/>

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/view_secondView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/ly_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:scrollbars="vertical"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>

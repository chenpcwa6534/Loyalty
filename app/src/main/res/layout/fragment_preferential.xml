<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/searchbarbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_search_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_common_red_category_normal"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="vertical"
        android:layout_below="@+id/searchbarbackground"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/searchbarview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <friendo.mtel.loyalty.view.SearchBarView
            android:id="@+id/csv_Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:OrderType="limit"
            app:SearchKey="true">

        </friendo.mtel.loyalty.view.SearchBarView>

    </LinearLayout>

</RelativeLayout>
